<article class="py-8">
  {% for block in section.blocks %}
    {% case block.type %}

      {% when 'article_title' %}
        <!-- Article Title -->
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            <a href="{{ blog.url }}" class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
            <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
          </div>
        </div>

      {% when 'article_author' %}
        <!-- Article Author -->
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            {% if section.settings.show_author %}
              <small>{{ article.author }}</small>
            {% endif %}
          </div>
        </div>


      {% when 'article_date' %}
        <!-- Article Date -->
        <div class="flex items-center justify-center">
          <div class="max-w-7xl text-center">
            {% if section.settings.show_date %}
              <time datetime="{{ article.published_at | date: "%B %m, %Y" }}">{{ article.published_at | date: "%B %m, %Y" }}</time>
            {% endif %}
          </div>
        </div>


      {% when 'featured_image' %}
        <!-- Article Image -->
        <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-4">
          {% if article.image != blank %}
            <img
              class="w-full h-80 md:h-96 object-cover object-center"
              src="{{ article.image | image_url: height: '300x' }}"
              alt="{{ article.image.alt }}">
          {% else %}
            {% assign placeholder_image = 'lifestyle-2' %}
            {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
          {% endif %}
        </div>


      {% when 'article_content' %}
        <!-- Article Body -->
        <div class="flex items-center justify-center">
          <div class="max-w-7xl px-3 md:px-0">
            {{ article.content }}
          </div>
        </div>

    {% else %}

      {% endcase %}
    {% endfor %}
  </article>


  <!-- Schema -->
  {% schema %}
    {
      "name": "Template Article",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_author",
          "default": true,
          "label": "Display Author Name"
        }, {
          "type": "checkbox",
          "id": "show_date",
          "default": true,
          "label": "Display Published Date"
        }
      ],
      "blocks": [
        {
          "type": "article_title",
          "name": "Article Title",
          "limit": 1
        },
        {
          "type": "article_author",
          "name": "Article Author",
          "limit": 1
        },
        {
          "type": "article_date",
          "name": "Article Date",
          "limit": 1
        },
        {
          "type": "featured_image",
          "name": "Thumbnail Image",
          "limit": 1
        }, {
          "type": "article_content",
          "name": "Content",
          "limit": 1
        }
      ]
    }
  {% endschema %}